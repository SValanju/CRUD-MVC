@model IEnumerable<MVC_1.Models.Users>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="text-center">
        <Label class="text-success">@ViewBag.Name</Label>
        <Label class="text-danger">@ViewBag.Message</Label>
    </div>
    <form method="post" action="/Home/EditUser">
        @foreach (var item in Model)
        {
            <input type="hidden" id="ID" name="id" value="@Html.DisplayFor(modelItem=>item.id)" />
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" id="Name" name="name" value="@Html.DisplayFor(modelItem=>item.name)" />
                </div>
                <div class="form-group col-md-6">
                    <label for="UsrName">User Name</label>
                    <input type="text" class="form-control" id="UsrName" name="usrName" value="@Html.DisplayFor(modelItem=>item.usrName)" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="Email">Email</label>
                    <input type="email" class="form-control" id="Email" name="email" value="@Html.DisplayFor(modelItem=>item.email)" />
                </div>
                <div class="form-group col-md-6">
                    <label for="MobNum">Mobile Number</label>
                    <input type="number" class="form-control" id="MobNum" name="cnum" value="@Html.DisplayFor(modelItem=>item.cnum)" />
                </div>
            </div>
        }
        <div class="my-3">
            <button type="submit" class="btn btn-primary mx-3">Submit</button>
            <button type="reset" class="btn btn-secondary mx-3">Cancel</button>
        </div>
    </form>
</div>
